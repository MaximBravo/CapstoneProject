<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.maximbravo.chongo3.DeckFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.maximbravo.chongo3.DeckFragment"
        tools:listitem="@layout/deck_list_item" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:text="@string/empty_list_text"
        android:contentDescription="@string/empty_list_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_deck_button"
        android:layout_width="wrap_content"
        android:src="@drawable/add"
        android:focusable="true"
        android:contentDescription="@string/add_button"
        android:nextFocusDown="@string/add_button"
        app:fabSize="normal"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="end|bottom"
        android:layout_height="wrap_content" />
</FrameLayout>
